{
  "name": "typescript-backend-best-practice",
  "version": "1.0.0",
  "main": "server.js",
  "repository": "https://github.com/DeanRTaylor1/typescript-backend-best-practice.git",
  "author": "DeanRTaylor1 <deanrtaylor@hotmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev:docker": "yarn db:setup && cross-env NODE_ENV=development nodemon",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "db:setup": "sequelize-cli db:migrate",
    "dev": "cross-env DOCKERFILE_NAME=Dockerfile.dev docker-compose up --build",
    "postgres": "docker run --name postgres14 -p 5432:5432 -e POSTGRES_USER=root -e POSTGRES_PASSWORD=secret -d postgres:14-alpine",
    "createdb": "sleep 5 && docker exec -it postgres14 createdb --username=root --owner=root test_db",
    "dropdb": "docker exec -it postgres14 dropdb --username=root test_db",
    "test-jest": "jest --ci --passWithNoTests --runInBand",
    "cleanup": "docker stop postgres14 && docker rm postgres14",
    "test": "yarn postgres && yarn createdb && cross-env NODE_ENV=test yarn db:setup && yarn test-jest; yarn cleanup",
    "build": "tsc && tsc-alias"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "eslint": "8.22.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "sequelize": "^6.33.0",
    "sequelize-typescript": "^2.1.5",
    "tsc-alias": "^1.8.8",
    "typedi": "^0.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.4",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/multer": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "sequelize-cli": "^6.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "node .scripts/check-env-vars.js && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ],
    ".github/workflows/*.yml": "eslint"
  }
}
